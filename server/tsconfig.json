{
    "compilerOptions": {
      // Basic Options
      "target": "ES6", // Specify ECMAScript target version (ES6 or higher)
      "module": "ESNext", // Specify module code generation (ESNext for modern environments)
      "lib": ["ESNext", "DOM"], // Specify library files to include in the compilation
  
      // Strict Type-Checking Options
      "strict": true, // Enable all strict type-checking options
      "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
      "strictNullChecks": true, // Enable strict null checks
      "strictFunctionTypes": true, // Enable strict checking of function types
      "strictBindCallApply": true, // Enable strict 'bind', 'call', and 'apply' methods on functions
      "strictPropertyInitialization": true, // Ensure non-undefined class properties are initialized
      "noImplicitThis": true, // Raise error on 'this' expressions with an implied 'any' type
      "alwaysStrict": true, // Parse in strict mode and emit "use strict" for each source file
  
      // Module Resolution Options
      "moduleResolution": "node", // Specify module resolution strategy (Node.js style)
      "esModuleInterop": true, // Enable compatibility with CommonJS modules
      "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
      "skipLibCheck": true, // Skip type checking of declaration files (improves build performance)
  
      // File Options
      "allowJs": false, // Do not allow JavaScript files to be compiled
      "checkJs": false, // Do not check JavaScript files for errors
      "resolveJsonModule": true, // Enable importing JSON modules
  
      // Output Options
      "outDir": "./dist", // Specify output directory for compiled files
      "rootDir": "./src", // Specify root directory of input files
      "removeComments": true, // Remove comments from compiled files
  
      // Source Map Options
      "sourceMap": true, // Generate corresponding .map files for debugging
  
      // Path Mapping (Optional: Useful for aliasing)
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"] // Example alias: Import from `src` using `@/...`
      }
    },
    "include": ["src/**/*"], // Include all TypeScript files in the `src` directory
    "exclude": ["node_modules", "dist", "build"] // Exclude specific directories
  }